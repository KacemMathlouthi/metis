# GitHub App Configuration
GITHUB_APP_ID=123456
GITHUB_APP_NAME=metis-ai-reviewer
GITHUB_CLIENT_ID=Iv1.abc123def456
GITHUB_CLIENT_SECRET_ID=your_client_secret_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here
GITHUB_SECRET_KEY_PATH=./private-key.pem
GITHUB_INSTALLATION_ID=12345678

# LLM Provider settings (LiteLLM - supports 100+ providers)
# See: https://docs.litellm.ai/docs/providers
# The MODEL_NAME prefix determines which provider & auth is used:
#   vertex_ai/  → Google Vertex AI (uses ADC: gcloud auth application-default login)
#   gpt-4o      → OpenAI (uses OPENAI_API_KEY env var)
#   mistral/    → Mistral (uses MISTRAL_API_KEY env var)
#   azure/      → Azure OpenAI (uses AZURE_API_KEY, AZURE_API_BASE env vars)
MODEL_NAME=vertex_ai/gemini-3-flash-preview

# Vertex AI (required when MODEL_NAME starts with "vertex_ai/")
# Auth: run "gcloud auth application-default login" before starting the app
VERTEX_PROJECT=your-gcp-project-id
VERTEX_LOCATION=us-central1

# Database settings
DATABASE_URL=postgresql+asyncpg://metis:metis_dev@localhost:5432/metis
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# JWT Settings
JWT_SECRET_KEY="your-secret-key"

# Frontend URL
FRONTEND_URL="http://localhost:5173"

# Encryption key for storing tokens
ENCRYPTION_KEY="your-fernet-key"

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_KEEPALIVE=True
REDIS_SOCKET_TIMEOUT=5

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1  # Separate DB for results
CELERY_TASK_TIME_LIMIT=600  # 10 minutes hard limit
CELERY_TASK_SOFT_TIME_LIMIT=540  # 9 minute warning

# Daytona Configuration
DAYTONA_API_KEY=your-daytona-api-key
DAYTONA_API_URL=https://app.daytona.io/api
DAYTONA_TARGET=us

# LangSmith Configuration
LANGSMITH_TRACING=True
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=your-langsmith-project
LANGSMITH_API_KEY=your-langsmith-api-key
